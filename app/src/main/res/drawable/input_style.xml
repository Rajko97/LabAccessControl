<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="5dp"
        android:bottom="15dp">
        <layer-list>
        <item>
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="-90"
                    android:startColor="#3e3e3e"
                    android:endColor="#070707"
                    android:type="linear" />
                <size android:width="24dp"
                    android:height="24dp"/>
                <corners
                    android:radius="3dp"/>
            </shape>
        </item>
        <item
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp">
            <shape
                android:shape="rectangle">
                <gradient
                    android:startColor="#cccccc"
                    android:endColor="#6c6c6c"
                    android:angle="90"/>

                <corners
                    android:radius="3dp"/>
            </shape>
        </item>
        </layer-list>
    </item>
</layer-list>