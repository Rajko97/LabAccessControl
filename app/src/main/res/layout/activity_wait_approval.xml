<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WaitActiveActivity"
    android:background="@drawable/bg_image">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:contentInsetStart="0dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logoImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/logo_header"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:transitionName="logo_image_transition"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#34afc7">
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginTop="468dp"
            android:text="Waitting for approval"
            android:textColor="@color/themeTextBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" />

        <Button
            android:layout_width="164dp"
            android:layout_height="55dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_ripple"
            android:paddingEnd="20dp"
            android:text="\u25C0 Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:layout_width="162dp"
            android:layout_height="56dp"
            android:layout_marginStart="236dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/button_disabled"
            android:enabled="false"
            android:text="Continue \u25B6&#xFE0E;"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="200dp"
            android:text="Device approval"
            android:textColor="@color/themeTextGray"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="368dp"
            android:layout_height="128dp"
            android:text="You have signed in from a new device. You need to wait for the admin approval"
            android:textColor="@color/themeTextGray"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="247dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>